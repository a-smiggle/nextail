{
  "name": "nextail",
  "description": "",
  "private": false,
  "workspaces": [
    "packages/*",
    "websites/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup": "rm -rf node_modules && rm -rf ./packages/*/node_modules && rm -rf ./websites/*/node_modules && rm -f pnpm-lock.yaml && pnpm i",
    "build": "pnpm run clean && pnpm -r --filter ./packages run build && pnpm -r --filter ./websites run build",
    "clean": "rimraf packages/*/lib && rimraf websites/*/.next && rimraf examples/*/.next",
    "lint": "eslint --ext js,ts,tsx .",
    "lint_fix": "eslint --fix --ext js,ts,tsx ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.6.2",
    "typescript": "~4.6.0",
    "rimraf": "^3.0.2"
  }
}
